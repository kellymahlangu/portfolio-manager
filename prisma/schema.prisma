generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BasicId {
  USER
}

model Basic {
  id         BasicId @id @default(USER)
  logo       String
  title      String
  name       String
  surname    String
  occupation String
  tagline    String
  mainImg    String
  headshot   String
}

model About {
  id  BasicId @id @default(USER)
  img String
  p1  String
  p2  String
  p3  String
  cv  String
}
