generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BasicId {
  USER
}

enum SkillCategory {
  FRONTEND
  BACKEND
  TOOL
}

model Basic {
  id         BasicId @id @default(USER)
  title      String
  name       String
  surname    String
  occupation String
  tagline    String
  mainImg    String
}

model About {
  id  BasicId @id @default(USER)
  img String
  p1  String
  p2  String
  p3  String
  cv  String
}

model Skill {
  id       Int           @id @default(autoincrement())
  name     String
  icon     String
  level    Int
  category SkillCategory

  Project Project[]
}

model Project {
  id          String  @id @default(uuid())
  img         String
  name        String
  description String
  stack       Skill[]
  liveUrl     String
  repoUrl     String?
}
